%nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  = link_to 'TwitterApp', root_path, class: 'navbar-brand', id: 'navbar-brand'
  %button.navbar-toggler{"aria-controls" => "navbarTogglerDemo02", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarTogglerDemo02", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #collapse.navbar-collapse
    %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
      %li.nav-item
        - if current_user
          %a.nav-link Signed in as #{current_user.name}
    %form.form-inline.my-2.my-lg-0
      - if current_user
        = link_to 'Tweet', new_tweet_path, class: 'btn btn-primary', id: 'tweet-btn'
        = link_to 'Log out', logout_path
      - else
        = link_to "Log in", "/auth/twitter", class: 'btn btn-primary', id: 'tweet-btn'
