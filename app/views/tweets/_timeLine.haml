- @timeline.each do |tweet|
  .list-groups
    .list-group-item.list-group-item-action.flex-column.align-items-start
      .card-img-top
        = image_tag tweet.user.profile_image_url_https, class: 'media-object'
      .d-flex.w-100.justify-content-between
        %h5.mb-1
          %strong#username
            = link_to "#{tweet.user.name}", "https://twitter.com/#{tweet.user.screen_name}"
          %nickname
            = link_to "@#{tweet.user.screen_name}", "https://twitter.com/#{tweet.user.screen_name} \â€¢"

          %small.text-muted#timedate
            = time_ago_in_words tweet.created_at
      %p.mb-1#tweet
        = auto_link(tweet.text).html_safe
